LIBRARY ieee;
USE ieee.std_logic_1164.all;

ENTITY machine IS
    PORT ( data_in, clk, reset : in std_logic;
           student_id          : out std_logic_vector (3 downto 0);
           current_state       : out std_logic_vector (3 downto 0)
         );
end machine;

ARCHITECTURE fsm OF machine IS
    TYPE state_type IS (s0, s1, s2, s3, s4, s5, s6, s7);
    SIGNAL yfsm : state_type;
BEGIN
    PROCESS (clk, reset)
    BEGIN
        IF reset = '1' THEN
            yfsm <= s0;
        ELSIF (clk'EVENT AND clk='1') THEN
            CASE yfsm IS
                WHEN s0 =>
                    IF data_in = '1' THEN
                        yfsm <= s2;
							end if;	
								 
					 WHEN s2 =>
                    IF data_in = '1' THEN
                        yfsm <= s4;
							end if;	
								 
					 WHEN s4 =>
                    IF data_in = '1' THEN
                        yfsm <= s6;
							end if;	
								
								 WHEN s6 =>
                    IF data_in = '1' THEN
                        yfsm <= s7;
							end if;	
								
								 WHEN s7 =>
                    IF data_in = '1' THEN
                        yfsm <= s5;
							end if;	
								
								 WHEN s5 =>
                    IF data_in = '1' THEN
                        yfsm <= s3;
								end if;
								
								 WHEN s3 =>
                    IF data_in = '1' THEN
                        yfsm <= s1;
								end if;
								
								 WHEN s1 =>
                    IF data_in = '1' THEN
                        yfsm <= s0;
								end if;
                
                    --END IF;
            END CASE;
        END IF;
    END PROCESS;

    PROCESS (yfsm)
    BEGIN
        CASE yfsm IS
            WHEN s0 => current_state <= "0000"; student_id <= "0010"; -- d2 = 2
            WHEN s1 => current_state <= "0001"; student_id <= "0000"; -- d3 = 0
            WHEN s2 => current_state <= "0010"; student_id <= "1000"; -- d4 = 8
            WHEN s3 => current_state <= "0011"; student_id <= "0001"; -- d5 = 1
            WHEN s4 => current_state <= "0100"; student_id <= "0000"; -- d6 = 0
            WHEN s5 => current_state <= "0101"; student_id <= "0011"; -- d7 = 3
            WHEN s6 => current_state <= "0110"; student_id <= "1001"; -- d8 = 9
            WHEN s7 => current_state <= "0111"; student_id <= "0111"; -- d9 = 7
        END CASE;
    END PROCESS;
end fsm;